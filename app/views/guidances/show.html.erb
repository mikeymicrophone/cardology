<body class = "body">

            <%def gui(str)%>
                <%if str.length> 490%> 
                      <%a = text_carousel(str)%>
                                           <div> <%=a[0]%></div>
                                           <div> <%=a[1]%></div>
                <%else%>
                     <div> <%=str%></div>
                <%end%>
             <%end%>

 <%= clearleft %>
  <%= link_to "Look up another Birthdate  ", guidances_prompt_path,:id => 'new_lookup_link', :class => 'lunar_navigation'%>
  <%=clearboth%>
    <div class="widget_heading">
          <section id="widget_title"><%= source_cards_marketing_text 'new_players', 'header' %></section>
            <section id="widget_instructions">Click on each Source Card to flip it over!</section>
    </div>
  <div id = "guidance_zone">
        <div  class="delivery_zone">
          <div class="panel">
            <div class="front flip_card">
              <%= image_tag (asset_path 'blueorangeround-lowrez.png'),style: "width: 250px;", :class => 'source_cards_card_design' %> 
            </div>
            <div class="back">
              <div class="prompt_heading">
                <b>Personal Daily Card </b>
              </div>
              <div class= "pane" >
                <div class = "constant">
                  <b>Your Daily Card: <%=@birthday.card_for_today.name%></b>              <p class= "pad">
                  <%= image_tag @birthday.card_for_today.image,style: "width: 150px;"%>
                  </p>
                </div>
              <%@a = @birthday.card_for_today.interpretations.where(reading: "daily").last&.explanation%>
              <%@b = @a.split("\r\n\r\n")%>
              <% c =@b.length%>
              <div class= "wrapper">
                <div class="owl-carousel owl-theme image-slider">
                  <%gui(@b[0])%>
                  <%gui(@b[1])%>
                  <%gui(@b[2])%>
                  <%if @b[3] != nil && @b[3]!= ""%>
                      <%gui(@b[3])%>
                  <%end%>  
                  </div>
               </div> 
              </div>
            </div>
          </div> 
        </div>
        <div class="delivery_zone" style ="padding-left:60px;" >
          <div class="panel">
            <div class="front flip_card">
              <%= image_tag (asset_path 'blueorangeround-lowrez.png'),style: "width: 250px;", :class => 'source_cards_card_design' %> 
            </div> 
            <div class="back">          
              <div class="prompt_heading">
                <b>52-Day Card</b>
              </div>
            <div class= "pane"  >
                <div class = "constant">
                  <b>Your 52 Day Card: <%=@birthday.card_for_the_planetary_period_on_date(Date.current).name%></b>
                  <p class= "pad">
                    <%= image_tag @birthday.card_for_this_planet.image,style: "width: 150px;" %>
                  </p>
                </div>
                <%@a = @birthday.card_for_the_planetary_period_on_date(Date.current).interpretations.where(reading: "yearly").last&.explanation%>
                <%@b = @a.split("\r\n\r\n")%>
                <%c =@b.length%>
                <div class= "wrapper">
                <div class="owl-carousel owl-theme image-slider">
                  <%gui(@b[0])%>
                 <%gui(@b[1])%>
                 <%gui(@b[2])%>
                <%if @b[3] != nil && @b[3]!= ""%>
                  <%gui(@b[3])%>
                <%end%>  
                </div>
                </div>
              </div>

            </div>
          </div>
        </div>
        <div  class="delivery_zone" style ="padding-left:60px;" >
            <div class="panel">
              <div class="front flip_card">
                <%= image_tag (asset_path 'blueorangeround-lowrez.png'),style: "width: 250px;", :class => 'source_cards_card_design' %> 
              </div>
              <div class="back">
                <div class="prompt_heading">
                  <b>Yearly Theme Card</b>
                </div>
              <div class= "pane" >
                <div class = "constant">    
                  <b>Your Yearly card: <%=@birthday.card_for_this_year.name%></b>
                  <p class= "pad">
                  <%= image_tag @birthday.card_for_this_year.image,style: "width: 150px;"%>
                  </p>
                </div>
                  <%@a = @birthday.card_for_this_year.interpretations.where(reading: "yearly").last&.explanation%>
                  <%@b = @a.split("\r\n\r\n")%>
                  <% c =@b.length%>
                  <div class= "wrapper">
                  <div class="owl-carousel owl-theme image-slider" id = "Testcarousel">     
                    <%gui(@b[0])%>
                 <%gui(@b[1])%>
                 <%gui(@b[2])%>
                <%if @b[3] != nil && @b[3]!= ""%>
                  <%gui(@b[3])%>
                <%end%>  
                  </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
     </div>
  


</body>
    


