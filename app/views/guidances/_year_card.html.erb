<% if params[:year] == nil%>
  <%@card = @birthday.card_for_this_year%>
  <%@date = DateTime.now%>
<%end%>
<div class="prompt_heading">
 <b>Yearly Theme Card</b>
</div>
<div class= "pane_guidance" >
    <div class = "constant">
      <div style = "text-align: center;">  
        <b style = "font-size: x-large;"><%=@card.name%></b>
      </div> 
       <%= marketing_text('heading','member' ,'yearly', 'subheader') %> 
      <p class= "pad">
       <%= image_tag @card.image.url,style: "width: 150px; border-radius: 5.5px;"%>
      </p>
    </div>
    <%@header = 'yearly'%>
     <%= render "guidances/carousel_reading" %>
   <%if  params[:year] == "last"%>
    <div class = "button_daily_card">
      <%= link_to "See This Year's Card", guidances_year_card_path( :year => 'current'),:remote => true ,:class => 'lunar_navigation'%>
      <%= link_to "See Next Year's Card", guidances_year_card_path( :year => 'next'),:remote => true ,:class => 'lunar_navigation'%>
    </div>
    <%elsif params[:year] == "next"%>
    <div class = "button_daily_card">
     <%= link_to "See This Year's Card", guidances_year_card_path( :year => 'current'),:remote => true ,:class => 'lunar_navigation'%>
      <%= link_to "See Last Year's Card", guidances_year_card_path( :year => 'last'),:remote => true ,:class => 'lunar_navigation'%>
    </div>
    <%else%>
      <div class = "button_daily_card">
      <%= link_to "See Last Year's Card", guidances_year_card_path( :year => 'last'),:remote => true ,:class => 'lunar_navigation'%>
      <%= link_to "See Next Year's Card", guidances_year_card_path( :year => 'next'),:remote => true ,:class => 'lunar_navigation'%>
      </div>
    <%end%>
    <%= javascript_include_tag 'carousel', 'data-turbolinks-track': 'reload' %>
</div>