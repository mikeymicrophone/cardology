<%= clearleft %>
<%= link_to 'Birth Card Lookup', new_birthday_path, :id => 'new_lookup_link', :class => 'lunar_navigation' %>
<% if params[:navigation_shown] %>
  <%= clearleft %><%= clearleft %><%= clearleft %>
  <%= link_to 'My Reading', root_url, :class => 'lunar_navigation' %>
<% end %>
<%= clearleft %><%= clearleft %><%= clearleft %>
<%= content_tag :div, :class => 'reading_display_container' do %>
  <%= div_for @birthday do %>
    <%= content_tag :div, :class => 'card_group_heading', :id => 'birth_cards_header' do %>
      <%= @pronoun %> Cards
      <div class="reddened">
        For Life
      </div>
    <% end %>
    <%= content_tag :div, :class => "panel birth" do %>
      <%= card_reading_pane @birthday.birth_card, :birth, "#@pronoun Birth Card", "For #{@birthday.birthdate.strftime("%b %e %Y")}" %>
    <% end %>
  
    <%= content_tag :div, :class => "panel #{@personality_card ? '' : 'flip'} personality" do %>
      <%= div_for @birthday, :personality_card_for, :class => "card_reading_pane pane front" do %>
        <%= content_tag :header, "#@pronoun Personality Card" %>
        <% if @personality_card %>
          <%= div_for @personality_card, :identification_of do %>
            <%= div_for @personality_card, :name_of do %>
              <%= @personality_card.name %>
            <% end %>
            <%= image_tag @personality_card.image, :class => 'card_face_image' %>
          <% end %>
      
          <%= div_for @personality_card, :explication_of do %>
            <%= mark_up @personality_card_explanation %>
          <% end %>
          <% if @member.birthday.astrological_sign.is_cusp? %>
            <%= link_to 'Jump Over the Cusp', member_assign_zodiac_path(:id => @member.id, :member => {:zodiac_sign => nil}), :method => :put, :class => 'trailing call_to_action lunar_navigation', :remote => true %>
          <% end %>
        <% end %>
      <% end %>
      
      <% if @birthday.zodiac_for_birthday.is_cusp? %>
        <%= div_for @birthday, :personality_card_for, :class => "card_reading_pane pane back" do %>
          <%= content_tag :header, "#@pronoun Personality Card" %>
          <%= @pronoun %> birthday is on an astrological cusp. To correctly determine <%= @pronoun.downcase %> Personality Card, we need to know which is <%= @pronoun.downcase %> Western Astrological sign. If you know it, please click it here:<br>
          <div id="zodiac_options">
            <%= zodiac_picker_for @member, @birthday %>
          </div>
          If you are unsure of <%= @pronoun.downcase %> Astrological Birth Sign, you may <%= mail_to ENV['ASTROLOGICAL_CUSP_QUERY_EMAIL_ADDRESS'], 'email us', :id => 'zodiac_email' %> with <%= @pronoun.downcase %> time and place of birth, and we will look it up for you. We will respond to your email in about 24 hours. Alternately, there are free lookup tools on the web for you to look up <%= @pronoun.downcase %> Astrological sign. And, if you want, you can play with each Astrological Sign option to see which Personality Card appears. A button will link you back to this page to change your choice again.
        <% end %>
      <% end %>
    <% end %>
    <hr>
    <%= content_tag :div, :class => 'card_group_heading' do %>
      <%= @pronoun %> Cards
      <div class="reddened">
        For This Year
      </div>
    <% end %>
  
    <%= clearboth %>
    <%= content_tag :div, :class => "panel yearly" do %>
      <%= card_reading_pane @birthday.card_for_this_year, :yearly, "#@pronoun Yearly Card", ENV['YEARLY_CARD_SUBTITLE'] do %>
        <%= link_to "See Last Year's Card", 'javascript: null', :class => 'flip_card call_to_action trailing lunar_navigation' %>
        <%= quote %>
      <% end %>
  
      <%= card_reading_pane @birthday.card_for_last_year, :yearly, 'Last Yearly Card', ENV['YEARLY_CARD_SUBTITLE'], 'back' do %>
        <%= link_to "See This Year's Card", 'javascript: null', :class => 'flip_card call_to_action trailing lunar_navigation' %>
        <%= quote %>
      <% end %>
    <% end %>
  
    <%= content_tag :div, :class => "panel planetary" do %>
      <%= card_reading_pane @birthday.card_for_this_planet, :yearly, "#@pronoun 52 Day Card", ENV['PLANETARY_CARD_SUBTITLE'] do %>
        <%= link_to "See #@pronoun Previous Card", 'javascript: null', :class => 'flip_card call_to_action trailing lunar_navigation' %>
      <% end %>
      
      <%= card_reading_pane @birthday.card_for_last_planet, :yearly, "Previous 52 Day Card", ENV['PLANETARY_CARD_SUBTITLE'], 'back' do %>
        <%= link_to "See #@pronoun Current Card", 'javascript: null', :class => 'flip_card call_to_action trailing lunar_navigation' %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
