<%= clearleft %>
<%= link_to 'Birth Card Lookup', new_birthday_path, :id => 'new_lookup_link', :class => 'lunar_navigation' %>
<% if params[:navigation_shown] %>
  <%= clearleft %><%= clearleft %><%= clearleft %>
  <%= link_to 'My Reading', root_url, :class => 'lunar_navigation' %>
<% end %>
<%= clearleft %><%= clearleft %><%= clearleft %>
<%= content_tag :div, :class => 'reading_display_container' do %>
  <%= div_for @birthday do %>
    <%= content_tag :div, :class => 'card_group_heading', :id => 'birth_cards_header' do %>
      <%= @pronoun %> Cards
      <div class="reddened">
        For Life
      </div>
    <% end %>
    <%= content_tag :div, :class => "panel birth" do %>
      <%= card_reading_pane @birthday.birth_card, :birth, "#@pronoun Birth Card", "For #{@birthday.birthdate.strftime("%b %e %Y")}" %>
    <% end %>
  
    <%= content_tag :div, :class => "panel #{@birthday.personality_card ? '' : 'flip'} personality" do %>
      <%= card_reading_pane @birthday.personality_card, :personality, marketing_text('card_previews', 'personality', 'header'), nil do %>
        <% if @birthday == @member.birthday %>
          <% if @member.birthday.astrological_sign.is_cusp? %>
            <%= link_to marketing_text('card_previews', 'personality', 'button'), member_assign_zodiac_path(:id => @member.id, :member => {:zodiac_sign => nil}), :method => :put, :class => 'trailing call_to_action lunar_navigation', :remote => true %>
          <% end %>
        <% end %>
      <% end %>
    
      <% if @birthday.zodiac_for_birthday.is_cusp? %>
        <%= div_for @birthday, :personality_card_for, :class => "card_reading_pane pane back" do %>
          <%= content_tag :header, marketing_text('card_previews', 'personality', 'header') %>
          <%= marketing_text('card_previews', 'personality_card', 'cusp_picker') %><br>
          <div id="zodiac_options">
            <%= zodiac_picker_for @member, @birthday %>
          </div>
          <%= marketing_text('card_previews', 'personality_card', 'cusp_unsure') %> <%= mail_to marketing_text('card_previews', 'personality_card', 'email'), 'email us', :id => 'zodiac_email' %> <%= marketing_text('card_previews', 'personality_card', 'cusp_unsure_two') %>
        <% end %>
      <% end %>
    <% end %>
    <hr>
    <%= content_tag :div, :class => 'card_group_heading' do %>
      <%= @pronoun %> Cards
      <div class="reddened">
        For This Year
      </div>
    <% end %>
  
    <%= clearboth %>
    <%= content_tag :div, :class => "panel yearly" do %>
      <%= card_reading_pane @birthday.card_for_this_year, :yearly, marketing_text('card_previews', 'yearly', 'header_current'), marketing_text('card_previews', 'yearly', 'subheader') do %>
        <%= link_to marketing_text('card_previews', 'yearly', 'button_last'), 'javascript: null', :class => 'flip_card call_to_action trailing lunar_navigation' %>
        <%= quote %>
      <% end %>
  
      <%= card_reading_pane @birthday.card_for_last_year, :yearly, marketing_text('card_previews', 'yearly', 'header_last'), marketing_text('card_previews', 'yearly', 'subheader'), 'back' do %>
        <%= link_to marketing_text('card_previews', 'yearly', 'button_current'), 'javascript: null', :class => 'flip_card call_to_action trailing lunar_navigation' %>
        <%= quote %>
      <% end %>
    <% end %>
  
    <%= content_tag :div, :class => "panel planetary" do %>
      <%= card_reading_pane @birthday.card_for_this_planet, :yearly, marketing_text('card_previews', 'planetary', 'header_current'), marketing_text('card_previews', 'planetary', 'subheader') do %>
        <%= link_to marketing_text('card_previews', 'yearly', 'button_last'), 'javascript: null', :class => 'flip_card call_to_action trailing lunar_navigation' %>
      <% end %>
      
      <%= card_reading_pane @birthday.card_for_last_planet, :yearly, marketing_text('card_previews', 'planetary', 'header_last'), marketing_text('card_previews', 'planetary', 'subheader'), 'back' do %>
        <%= link_to marketing_text('card_previews', 'planetary', 'button_current'), 'javascript: null', :class => 'flip_card call_to_action trailing lunar_navigation' %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
